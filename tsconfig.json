{
  "compilerOptions": {
    "outDir": "./dist/esm/",
    "noImplicitAny": true,
    "module": "es2015",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "stories",
    "public",
    "tailwind.config.js",
    "dist/*"
  ]
}